          </li>
        </ul>
      </div>

    <nav>
      {{#if logged_in}}
      <a class="uk-inline navBtn uk-button uk-button-default" id="profile" href="/profile">Profile</a>
        <div uk-dropdown="mode: click">
          <ul class="uk-nav uk-dropdown-nav">
            <li class="uk-active"><a href="/owner">My Profile</a></li>
              <li><a href="/pet">My Dog's Profile</a></li>
          </ul> 
        </div>
      <a class="navBtn uk-button uk-button-default" id="logout">Logout</a>
      {{else}}
      <a class="navBtn uk-button uk-button-default" href="/signup">Sign Up</a>
      <a class="navBtn uk-button uk-button-default" href="/login">Login</a>  
      {{/if}}
    </nav>
